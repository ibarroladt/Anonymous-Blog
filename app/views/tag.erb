<div class="container">
  <h1>TAG PAGE</h1>
  
  <p>This are all the posts for this tag:</p>

  <table>
    <tr>
        <th>Title</th>
        <th>Body-Prev</th>
        <th>Date</th>
        <th>Tags</th>
    </tr>
    <% @tag.posts.each do |post|%>
    <tr>
      <td><%=post.title%></td>
      <td><%=post.body.to_s[0,40]+"..."%></td> 
      <td><%=post.updated_at.to_s[0,10]%></td>
      <td><%=post.tags_s[0,15]%></td>
    <tr>
    <%end%>
    
  </table>
</div>
