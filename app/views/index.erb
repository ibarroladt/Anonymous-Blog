<div class="container">
  <h1>Welcome to my Blog!</h1>
  
  <a href="/post/new">add a post</a>
    
  <div class="tags">
    <p>Tags</p>
    <ul>
      <% Tag.joins(:posts).uniq.each do |tag| %>
        <li><a href=<%="/tag/#{tag.id}"%> ><%=tag.name%></a></li>

      <%end%>
    </ul>
  </div>

  <div class="posts">
    <p>This are all your Posts!</p>
    <table>
      <tr>
        <th>Title</th>
        <th>Body-Prev</th>
        <th>Date</th>
        <th>Tags</th>
        <th>Actions</th>
      </tr>
      <% Post.order("updated_at DESC").each do |post| %>
      <tr>
        <td><%=post.title%></td>
        <td><%=post.body.to_s[0,40]+"..."%></td> 
        <td><%=post.updated_at.to_s[0,10]%></td>
        <td><%=post.tags_s[0,15]%></td>
        <td> <a href=<%="/post/#{post.id}"%> >O</a> - 
             <a href=<%="/post/#{post.id}/edit"%> >E</a> - 
             <a href=<%="/post/#{post.id}/destroy"%> >D</a></td>  
      </tr>
      <%end%>
    </table>
   </div>
    
</div>









